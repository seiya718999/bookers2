<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>
        
        <div  class="form-group">
          <label for="inputImage">image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>  
        </div>
        
        <div class="form-group">
          <label for="inputImage">Introduction</label><br>
          <%= f.text_field :introduction, class:"form-control" %>  
        </div>
        
        <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>