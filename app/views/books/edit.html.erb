<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @abook do |f| %>
        <div class="form-group">
          <label for="inputName">Title</label><br>
          <%= f.text_field :title, autofocus: true, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Opinion</label><br>
          <%= f.text_field :body, class:"form-control" %>  
        </div>
        <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to book_path(@abook.id) do %>
        show
      <% end %>
      <span>|</span>
      <%= link_to books_path do %>
        Back
      <% end %>
    </div>
  </div>
</div>